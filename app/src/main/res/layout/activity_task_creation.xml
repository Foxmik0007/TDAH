<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Widget.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitew"
        tools:context=".taskCreation">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Welcome to the task Creation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/patua_one"
            android:text="Give a name to your goal :"
            android:textColor="#A5A5A5"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/goalName_create"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/custom_input_login"
            android:ems="10"
            android:fontFamily="@font/patua_one"
            android:hint="New Goal name"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="#BCBCBC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/patua_one"
            android:text="Difficulty :"
            android:textColor="#B5B5B5"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goalName_create" />

        <CheckBox
            android:id="@+id/checkBoxEasy"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="208dp"
            android:fontFamily="@font/patua_one"
            android:text="Easy"
            android:textColor="#8A8A8A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <CheckBox
            android:id="@+id/checkBoxMedium"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="208dp"
            android:fontFamily="@font/patua_one"
            android:text="Medium"
            android:textColor="#8A8A8A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxEasy" />

        <CheckBox
            android:id="@+id/checkBoxHard"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="208dp"
            android:fontFamily="@font/patua_one"
            android:text="Hard"
            android:textColor="#8A8A8A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxMedium" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/patua_one"
            android:text="Importance"
            android:textColor="#B5B5B5"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/importanceSpinner"
            app:layout_constraintHorizontal_bias="0.315"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxHard" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/patua_one"
            android:text="Enter the steps : "
            android:textColor="#B5B5B5"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <EditText
            android:id="@+id/stepName_creation"
            android:layout_width="177dp"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_input_login"
            android:ems="10"
            android:fontFamily="@font/patua_one"
            android:hint="New step"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="#BCBCBC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <EditText
            android:id="@+id/durationCreation"
            android:layout_width="122dp"
            android:layout_height="46dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_input_login"
            android:ems="10"
            android:fontFamily="@font/patua_one"
            android:hint="Set Value"
            android:inputType="time"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="#BCBCBC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stepName_creation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmGoalCreation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button"
            android:text="Confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_due_date_select" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAddStep"
            android:layout_width="119dp"
            android:layout_height="42dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/patua_one"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/durationCreation"
            app:layout_constraintTop_toBottomOf="@+id/stepName_creation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonChoosePartner"
            android:layout_width="172dp"
            android:layout_height="42dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/patua_one"
            android:text="Choose Partner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/durationCreation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_due_date_select"
            android:layout_width="144dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/patua_one"
            android:text="Select A Due Date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonChoosePartner" />

        <Spinner
            android:id="@+id/importanceSpinner"
            android:layout_width="186dp"
            android:layout_height="31dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            app:layout_constraintBottom_toTopOf="@+id/buttonAddStep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.742"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxHard"
            app:layout_constraintVertical_bias="0.15" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

