<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"/>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/historic_task_name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/patua_one"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/historic_objectif_difficulty"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/patua_one"
            android:text="TextView"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/state"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="#A4E61A1A"
            app:cardCornerRadius="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AECCCCCC"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>